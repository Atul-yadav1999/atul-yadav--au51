<section class="login flex justify-center my-16">
    <div style="background-color: antiquewhite; border: 2px solid;">
    <form action="/login" method="POST" class="mx-4 py-4">

        <% if(messages.error){%>
            <span class="text-red-500 text-sm"><%=messages.error %></span>
                   <% } %>

        <h1 class="font-bold">Login</h1><br><br>

        <label>Email</label><br>
        <input name="email" type="email" placeholder="username"><br><br>

        <label>Password</label><br>
        <input name="password" type="password" placeholder="password"><br><br>

        <button type="submit" style="text-align: right; border: 3px solid;" class="rounded-full">Login</button>
        <a class="mx-4" href="/resister">Don't have account?</a>
    </form>
    </div>
</section>