


  
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
        <h6 class="text-lg"><em>Are you hungry</em></h6>
        <h1 class="text-6xl font-bold">Don't Wait!</h1>
    </div>
    <div class="w-1/2">
        <img src="../..//static/img/OIP.jpg">
    </div>
    
    </div>
</section>
 <section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold">All Pizzas</h1>
    <div class="grid grid-cols-4 col-gap-10 row-gap-14">
        <% pizzas.forEach(function(pizza) { %>
           
            <div>
                <img class="h-40 mb-4 mx-auto" src="../../public/img/OIP2.jpg" alt="image2">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name%></h2>
                    <div class="flex items-center justify-around mt-6">
                        <span>Rs<%= pizza.price %></span>
                        <button   class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"  style="color: orangered; border: 2px solid;">+ Add</button>
                    </div>
                </div>
             </div>

       <% })%>
        
         
    </div>
    
 </section>
